# Algorand Configuration
# Copy this file to .env.local and fill in your Algorand network details

# Algorand Node Configuration
ALGOD_TOKEN=your_algod_token_here
ALGOD_SERVER=https://testnet-api.algonode.cloud
ALGOD_PORT=443

# Algorand Indexer Configuration
INDEXER_TOKEN=your_indexer_token_here
INDEXER_SERVER=https://testnet-idx.algonode.cloud
INDEXER_PORT=443

# Merchant Wallet Configuration
# In production, use a secure key management system
MERCHANT_PRIVATE_KEY=your_merchant_private_key_mnemonic_here

# For mainnet, use:
# ALGOD_SERVER=https://mainnet-api.algonode.cloud
# INDEXER_SERVER=https://mainnet-idx.algonode.cloud

# For local development with Algorand Sandbox:
# ALGOD_SERVER=http://localhost
# ALGOD_PORT=4001
